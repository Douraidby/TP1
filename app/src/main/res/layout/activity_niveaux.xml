<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_niveaux"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tp1.inf8405.newapplication.niveaux">

    <Button
        android:text="Niveau 1 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:id="@+id/niveau_1" />

    <Button
        android:text="Niveau 2 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/niveau_1"
        android:layout_alignStart="@+id/niveau_1"
        android:id="@+id/niveau_2" />

    <Button
        android:text="Niveau 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/niveau_2"
        android:layout_alignRight="@+id/niveau_2"
        android:layout_alignEnd="@+id/niveau_2"
        android:layout_marginTop="68dp"
        android:id="@+id/niveau_3" />
</RelativeLayout>
